  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "electron": "19.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "8.17.0",
    "typescript": "4.7.3"
  },
  "build": {
    "directories": {
      "output": "build"
    },
    "win": {
      "asar" : false,
      "target" : "portable"
    },
    "files": [
      "./dist/**/*",
      "./views/**/*",
      "*.map"
    ],
    "extraMetadata": {
